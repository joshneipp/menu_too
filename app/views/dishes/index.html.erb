<p id="notice"><%= notice %></p>

<% @courses.each do |course| %>
<table>
<h1><%= course.name %></h1>
<div><%= image_tag asset_url(course.image), class: "menu-image" %></div>
<thead>


  <% course.dishes.each do |dish| %>

    <tr>
      <td><%= link_to edit_dish_path(dish) do %>
        <i class="dish"></i> <%= dish.name %>
        <% end %>
      <td><%= dish.name %></td>
      <td><%= dish.description %></td>
      <td><%= dish.price %></td>
      <td><%= dish.course_id %></td>
      <td><%= link_to 'Show', dish %></td>
      <td><%= link_to ' ', edit_dish_path(dish) %></td>
      <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>

  <% end %>
  </thead>
<%= link_to 'New Dish', new_dish_path(course_id: course.id) %>
<% end %>

</table>
